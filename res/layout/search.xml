ight="32.0dip"            android:paddingLeft="20.0dip"            android:paddingRight="20.0dip" />        <TextView            android:layout_width="wrap_content"            android:layout_height="32.0dip"            android:gravity="center"            android:text="搜字"            android:textColor="#ff545454" />        <RadioButton            android:id="@+id/search_rb02"            android:layout_width="wrap_content"            android:layout_height="32.0dip"            android:paddingLeft="20.0dip"            android:paddingRight="20.0dip" />        <TextView            android:layout_width="wrap_content"            android:layout_height="32.0dip"            android:gravity="center"            android:text="搜拼音"            android:textColor="#ff545454" />        <RadioButton            android:id="@+id/search_rb03"            android:layout_width="wrap_content"            android:layout_height="32.0dip"            android:paddingLeft="20.0dip" />        <TextView            android:layout_width="wrap_content"            android:layout_height="32.0dip"            android:gravity="center"            android:text="搜笔画"            android:textColor="#ff545454" />    </LinearLayout>    <TextView        android:id="@+id/search_tv01"        android:layout_width="fill_parent"        android:layout_height="25.0dip"        android:background="#ff545454"        android:gravity="center_vertical"        android:paddingLeft="5dip"        android:singleLine="true"        android:text="没有所需内容"        android:textColor="@color/white"        android:textSize="18dip"        android:textStyle="bold" />    <RelativeLayout        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:background="@drawable/setting_line_bg" >        <ProgressBar            android:id="@+id/search_pb01"            android:layout_width="wrap_content"            android:layout_height="wrap_content"        